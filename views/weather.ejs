<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/headerLink") -%>
</head>
<body>
    <!------------ nav bar link --------->
    <%- include("partials/nav") -%>

    <!------------ weather code -------------->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" name="" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitbtn">
                    </form>
                </div>

                <div class="tempinfo">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 Oct</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data-hide">
                            <p> <span id="temp">0 </span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-------------- footer ------------------>
    <%- include("partials/footer") -%>
    <script src="js/main.js"></script>
</body>
</html>